<div class='nested-fields'>
  <div class="row">
    <div class="col-sm-12 col-md-3 col-lg-3 form-group">
      <%= f.input :country %>
    </div>
    <div class="col-sm-12 col-md-3 col-lg-3 form-group">
      <%= f.input :default_affiliate_tag %>
    </div>
    <div class="col-sm-12 col-md-3 col-lg-3 form-group">
      <%= f.input :tracker %>
    </div>
    <div class="col-sm-12 col-md-3 col-lg-3 form-group">
      <%= link_to_remove_association 'Remove Affiliate',
                                     f,
                                     class: 'btn btn-danger btn-sm remove-affiliate-button',
      data: { title: 'Delete Action', confirm: 'Confirm Delete',commit: 'Yes', cancel: 'No'}%>
    </div>


  </div>
</div>



