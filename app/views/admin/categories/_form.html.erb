<%= simple_form_for [:admin, @category] , validate: true do |f| %>
    <%= f.input :title, presence: true, autofocus: true %>
    <%= f.input :description %>
    <%= f.submit 'Submit Category', class: 'btn btn-default' %>
<% end %>
<br>
<%= link_to 'Back', admin_categories_path, class: 'btn btn-success' %>

<script type="text/javascript" charset="utf-8">
$('#new_category').enableClientSideValidations();
</script>