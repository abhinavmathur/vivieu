<h2 class="text-center text-default">Tags</h2>

<div class="row">
  <table class="table table-striped table-hover">
    <thead>
    <tr class="info">
      <th>No.</th>
      <th>Category</th>
      <th>Tag count</th>
      <th>Options</th>
    </tr>
    </thead>
    <tbody>
    <% @categories.each_with_index do |category, index| %>
        <tr class="active">
          <td><%= index + 1 %></td>
          <td><%= category.title %></td>
          <td><%= category.tags_count %></td>
          <td><%= link_to 'Manage Tags', admin_manage_tags_path(category: category.title), class: 'btn btn-sm btn-default' %></td>
        </tr>
    <% end %>


    </tbody>
  </table>
</div>