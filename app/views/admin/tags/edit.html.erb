<h3 class="text-center">Edit Tag</h3>
<div class="row">
  <div class="col-sm-12 col-md-6 col-md-offset-3">
    <%= simple_form_for [:admin, @tag], validate: true, html: { class: 'form-horizontal' } do |f| %>
        <div class="form-group">
          <%= f.input :title, required: true, autofocus: true, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= f.button :submit %>
          <%= link_to 'Back', :back, class: 'btn btn-success' %>
        </div>
    <% end %>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  $('#edit_tag_<%= @tag.id %>').enableClientSideValidations();
</script>

