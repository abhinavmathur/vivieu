<%= form_tag route, method: 'GET', id: 'search-form', class: 'form-inline' do %>
    <div class="form-group">
      <%= text_field_tag :search, params[:search], placeholder: "Search #{name}", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= submit_tag 'Search', class: 'btn btn-success btn-sm form-control', name: nil %>
    </div>
<% end %>