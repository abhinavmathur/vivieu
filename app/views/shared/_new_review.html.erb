<div class="modal fade" id="review-modal" tabindex="-1" role="dialog" aria-labelledby="review-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center" id="myModalLabel">Create a Review</h4>
      </div>
      <%= simple_form_for [:reviewer, Review.new], validate: true do |f| %>
          <div class="modal-body">
            <%= f.association :category, include_blank: false, prompt: 'Choose a Category' %>
            <%= f.input :title, required: true %>
            <%= f.input :asin, required: true %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
            <%= f.button :submit, class: 'btn btn-default' %>
          </div>
      <% end %>
    </div>
  </div>
</div>
