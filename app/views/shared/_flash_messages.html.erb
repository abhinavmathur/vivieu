<% flash.each do |key, value| %>
    <% if key.to_s == 'notice' %>
        <div class="alert alert-dismissible alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <p class="medium-text">
          <%= value.html_safe %>
          </p>
        </div>
    <% elsif key.to_s == 'error' %>
        <div class="alert alert-dismissible alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <p class="medium-text">
          <%= value.html_safe %>
          </p>
        </div>
    <% else %>
        <div class="alert alert-dismissible alert-<%= key %>">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <p class="medium-text">
          <%= value.html_safe %>
          </p>
        </div>
    <% end %>
<% end %>