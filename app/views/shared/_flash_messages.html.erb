<% flash.each do |key, value| %>
    <% if key.to_s == 'notice' %>
        <div class="alert alert-dismissible alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= value.html_safe %>
        </div>
    <% elsif key.to_s == 'error' %>
        <div class="alert alert-dismissible alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= value.html_safe %>
        </div>
    <% else %>
        <div class="alert alert-dismissible alert-<%= key %>">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= value.html_safe %>
        </div>
    <% end %>
<% end %>